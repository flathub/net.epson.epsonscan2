{
    "id": "net.epson.epsonscan2",
    "runtime": "org.kde.Platform",
    "sdk": "org.kde.Sdk",
    "runtime-version": "5.15-25.08",
    "command": "epsonscan2",
    "rename-desktop-file": "epsonscan2.desktop",
    "rename-icon": "escan2_app",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=all",
        "--system-talk-name=org.freedesktop.Avahi",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-desktop",
        "--filesystem=xdg-documents",
        "--env=LD_LIBRARY_PATH=/app/lib/x86_64-linux-gnu/epsonscan2-ocr",
        "--persist=.epsonscan2"
    ],
    "modules": [
        {
            "name": "avahi",
            "cleanup": [
                "/include",
                "/lib/avahi",
                "/lib/pkgconfig",
                "/share/applications/*.desktop",
                "/share/avahi",
                "/share/man",
                "*.a",
                "*.la"
            ],
            "config-opts": [
                "--with-distro=none",
                "--disable-gobject",
                "--disable-introspection",
                "--disable-qt3",
                "--disable-qt4",
                "--disable-qt5",
                "--disable-gtk",
                "--disable-gtk3",
                "--disable-core-docs",
                "--disable-manpages",
                "--disable-libdaemon",
                "--disable-libevent",
                "--disable-python",
                "--disable-pygobject",
                "--disable-mono",
                "--disable-monodoc",
                "--disable-autoipd",
                "--disable-doxygen-doc",
                "--disable-doxygen-dot",
                "--disable-doxygen-xml",
                "--disable-doxygen-html",
                "--disable-manpages",
                "--disable-xmltoman"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.avahi.org/download/avahi-0.8.tar.gz",
                    "sha256": "060309d7a333d38d951bc27598c677af1796934dbd98e1024e7ad8de798fedda",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 147,
                        "url-template": "https://www.avahi.org/download/avahi-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "psmisc",
            "cleanup": [
                "/bin/p*",
                "/bin/fuser",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.sourceforge.net/project/psmisc/psmisc/psmisc-23.5.tar.xz",
                    "sha256": "dc37ecc2f7e4a90a94956accc6e1c77adb71316b7c9cbd39b26738db0c3ae58b"
                }
            ]
        },
        {
            "name": "epsonscan2-non-free",
            "buildsystem": "simple",
            "build-commands": [
                "ar xf plugins/epsonscan2-non-free-plugin_*.deb",
                "tar Jxf data.tar.xz",
                "chmod -R u+w usr",
                "install -d ${FLATPAK_DEST}",
                "cp -r usr/* ${FLATPAK_DEST}",
                "python ./epson_patch.py"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download-center.epson.com/f/module/19dc56b2-fbdc-4569-a8c1-ccc7224e4573/epsonscan2-bundle-6.7.82.0.x86_64.deb.tar.gz",
                    "sha256": "34e728ab49e245b2a7cff8a0d1cae91c306ce8225e42ddb50eabdb22d4b06b9c"
                },
                {
                    "type": "file",
                    "path": "epson_patch.py"
                }
            ]
        },
        {
            "name" : "boost",
            "buildsystem" : "simple",
            "cleanup" : [
                "/include",
                "/lib/libboost_*.so*",
                "/lib/libboost_*.a"
            ],
            "build-commands" : [
                "./bootstrap.sh --with-libraries=atomic",
                "./b2 install variant=release link=shared runtime-link=shared --prefix=${FLATPAK_DEST} -j $FLATPAK_BUILDER_N_JOBS"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://downloads.sourceforge.net/project/boost/boost/1.68.0/boost_1_68_0.tar.bz2",
                    "sha256" : "7f6130bc3cf65f56a618888ce9d5ea704fa10b462be126ad053e80e553d6d8b7"
                }
            ]
        },
        {
            "name": "epsonscan2",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "cxxflags": "-Wno-error=template-body"
            },
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_POLICY_VERSION_MINIMUM=3.5",
                "-DCMAKE_INSTALL_LIBDIR=lib/x86_64-linux-gnu"
            ],
            "post-install": [
                "install -Dm644 net.epson.epsonscan2.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo",
                "install -Dm644 ${FLATPAK_DEST}/lib/x86_64-linux-gnu/epsonscan2/Resources/Icons/escan2_app.png ${FLATPAK_DEST}/share/icons/hicolor/512x512/apps/escan2_app.png",
                "install -Dm644 desktop/deb/x86_64/epsonscan2.desktop -t ${FLATPAK_DEST}/share/applications",
                "desktop-file-edit --set-key=Exec --set-value=epsonscan2 ${FLATPAK_DEST}/share/applications/epsonscan2.desktop"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download-center.epson.com/f/module/7406d656-d87b-43ae-8efe-16ab16c173c5/epsonscan2-6.7.82.0-1.src.tar.gz",
                    "sha256": "1dd790dd69dfa72c9aaae78b30196803a8b80117e1561c1675bca9ea37d275f2"
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/0001-Fix-prefix-to-flatpak.patch",
                        "patches/0002-Fix-crash.patch",
                        "patches/0003-Use-XDG-open-to-open-the-directory.patch",
                        "patches/0004-Fix-a-crash-on-an-OOB-container-access.patch",
                        "patches/0005-Added-missing-headers.patch"
                    ]
                },
                {
                    "type": "file",
                    "path": "net.epson.epsonscan2.metainfo.xml"
                }
            ]
        }
    ]
}
